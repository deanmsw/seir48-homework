<h1>Update Listing</h1>

<h2>Update this product:  </h2>

<form action="/materials/<%= @edit_product["id"]%>" method="post">

  <label>
    Product Name:
      <input name="product_name" placeholder="Screws..." required value="<%= @edit_product["product_name"]%> ">
  </label>

  <label>
    Description
      <input name="description" placeholder="This item is..." value="<%= @edit_product["description"]%> ">
  </label>
  <label>
    Price
      <input type="integer" name="price" placeholder="This item is..." value="<%= @edit_product["price"]%> ">
  </label>

  <label>
    Quantity
      <input type="integer" name="quantity" placeholder="0000" value="<%= @edit_product["quantity"]%> ">
  </label>

  <label>
    Image:
      <input type="url" name="image" placeholder="http://..." value="<%= @edit_product["image"]%> ">
  </label>

  <label>
    Location
      <input name="location" placeholder="City" value="<%= @edit_product["location"]%> ">
  </label>

  <button>Update Product Listing</button>
</form>
